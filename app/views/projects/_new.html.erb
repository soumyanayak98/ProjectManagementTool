<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Create a new project</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<div class="modal-body">
  <%= form_with(model: @project, class: "shadow p-4 bg-dark rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :project_name , class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_field :project_name, class: "form-control", placeholder: "Enter a name for your project" %>
        </div>
      </div>
      <div class="form-group row justify-content-center mb-0">
        <%= f.submit class: "btn btn-outline-light btn-lg"%> 
      </div> 
    <% end %>
</div>