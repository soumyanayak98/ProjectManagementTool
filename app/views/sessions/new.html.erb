<%= render 'shared/navigation' %>


<div class="container">
  <%= render 'shared/msgs' %>

  <h4 class="text-center text-dark"></h4>

  <div class="row justify-content-center text-white">
    <div class="col-md-8">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-4 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :email , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: "form-control", required: true, placeholder: "Enter your Email"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :password , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control", required: true, placeholder: "Enter Your password" %>
            </div>
        </div>
        <div class="form-group row justify-content-center mb-0">
          <%= f.submit "Log In", class: "btn btn-outline-light btn-lg"%> 
        </div> 
      <% end  %> 
    </div>
  </div>
  <div class="mt-2 text-center">
    <%= link_to "Sign Up! here", signup_path, class: "btn btn-outline-primary btn-sm" %>
    <%= link_to "log in with google", "/auth/google_oauth2", method: :post, class: "btn btn-outline-primary btn-sm"  %>
  </div>
</div>